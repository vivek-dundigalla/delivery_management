<odoo>
    <record id="view_delivery_dashboard_kanban" model="ir.ui.view">
        <field name="name">delivery.dashboard.kanban</field>
        <field name="model">delivery.dashboard</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <templates>
                    <t t-name="kanban-box">
                        <!-- Dashboard only, no individual record -->
                    </t>
                </templates>

                <div class="o_dashboard_sections">
                    <section>
                        <h2>Delivery Invoices (<t
                                t-esc="widget.records and widget.records[0].delivery_invoice_count or 0"/>)
                        </h2>
                    </section>

                    <section>
                        <h2>Delivery Canceled (<t
                                t-esc="widget.records and widget.records[0].delivery_canceled_count or 0"/>)
                        </h2>
                    </section>

                    <section>
                        <h2>Delivery On Way (<t
                                t-esc="widget.records and widget.records[0].delivery_on_way_count or 0"/>)
                        </h2>
                    </section>

                    <section>
                        <h2>Delivery Arrived (<t
                                t-esc="widget.records and widget.records[0].delivery_arrived_count or 0"/>)
                        </h2>
                    </section>

                    <section>
                        <h2>Delivery Assigned (<t
                                t-esc="widget.records and widget.records[0].delivery_assigned_count or 0"/>)
                        </h2>
                    </section>
                </div>
            </kanban>
        </field>
    </record>

    <record id="action_delivery_dashboard" model="ir.actions.act_window">
        <field name="name">Delivery Dashboard</field>
        <field name="res_model">delivery.dashboard</field>
        <field name="view_mode">kanban</field>
        <field name="target">current</field>
    </record>

</odoo>
